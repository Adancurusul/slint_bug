// `PopupBorder` can used to draw border and background of a `Popup`.
export component PopupBorder inherits Rectangle {
    background: #ffffff;
    border_radius: 5px;
    border_width: 1px;
    border_color: #000000;
    clip: true;
}

// `Popup` is used to show a popup overlay.
export component custom_popup inherits PopupWindow {
    PopupBorder {  
        @children
    }
}