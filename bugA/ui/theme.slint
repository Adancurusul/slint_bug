    medium: length,
    large: length,
}

export struct Durations {
    fast: duration,
    medium: duration,
    slow: duration,
}

struct Font {
    size: length,
    weight: float,
}


export struct Settings  {
    // If set to `true` some widgets are adjusted in size and handling e.g. the keyboard buttons.
    //
    // This property minimizes sizes and also the behavior of some widgets. 
    // This should be used if there some issues on mcu platforms like the pitheme.theme.
    minimize: bool,
} 

export struct Typo {
    label: Font,
    label-light: Font,
    header: Font,
    header-item: Font,
    header-item-light: Font,
    value: Font,
    desciption: Font,
    desciption-light: Font,
    value-big: Font,
    small_label: Font,

    // Defines typo of medium labels.
    medium_label: Font,

    // Defines typo of large labels.
